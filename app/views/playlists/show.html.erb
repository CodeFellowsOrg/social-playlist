<% title(@playlist.name, "Playlists") %>
<h2><%= @playlist.name %></h2>
<%= link_to 'Back', playlists_path %>
<%= link_to "Edit Playlist", edit_playlist_path(@playlist) %>
<%= link_to "Delete Playlist",
     playlist_path(@playlist),
     :method => :delete,
     :confirm => "Are you sure you want to delete this playlist?" %>
<%= link_to "New Item", new_playlist_item_path(@playlist) %>
<br />
<ul id='items'>
  <% @playlist.items.each do |item| %>
  <li>#<%= item.id %> <%= link_to item.order, [@playlist, item] %></li>
  <% end %>
</ul>
